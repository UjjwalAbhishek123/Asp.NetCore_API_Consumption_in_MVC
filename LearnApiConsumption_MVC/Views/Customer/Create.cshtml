@* giving some inline style to card *@
<style type="text/css">
    .card{
        width:60%;
        margin-left: 20%;
        margin-top: 5%;
    }    
</style>

<div class="card">
    @* it will be heading *@
    <div class="card-header">
        <h2>Create Customer</h2>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <label>Code</label>
                    <input class="form-control" id="txtcode"/>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <label>Name</label>
                    <input class="form-control" id="txtname" />
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <label>Email</label>
                    <input class="form-control" id="txtemail" />
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <label>Phone</label>
                    <input class="form-control" id="txtphone" />
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <label>Credit limit</label>
                    <input class="form-control" id="txtcreditLimit" />
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <label>Is Active</label>
                    <input type="checkbox" checked="checked" class="form-check" id="chkactive" />
                </div>
            </div>
        </div>
    </div>

    <div class="card-footer">
        <a class="btn btn-primary" onclick="SaveCustomer()">Save</a>
    </div>

</div>